<%- model_class = Post -%>
<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <% flash[:error].each do |msg| %>
          <%= msg %>
        <% end %>
    </div>
<% end %>

<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= render :partial => 'form' %>
