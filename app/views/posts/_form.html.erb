<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
<div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-1' %>
    <div class="col-lg-11">
      <%= f.text_area :content, :class => 'form-control ckeditor' %>
    </div>
</div>
  <div class="form-group">
    <%= f.label :category_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%# <%= f.text_field :category_id, :class => 'form-control' %>      
      <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image_id, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
